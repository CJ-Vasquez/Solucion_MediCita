<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediCita</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3 sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold fs-3"
                   asp-controller="@(User.Identity!.IsAuthenticated ? "Admin" : "Home")"
                   asp-action="@(User.Identity!.IsAuthenticated ? "Dashboard" : "Index")">
                    <i class="bi bi-hospital-fill"></i> MediCita
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Panel
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Medicamentos" asp-action="Index">Gestión Farmacia</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    Citas Médicas
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Citas" asp-action="Index">Reservar Cita</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Citas" asp-action="MisCitas">Mis Reportes</a></li>
                                </ul>
                            </li>

                            <li class="nav-item ms-3">
                                <a class="nav-link btn btn-warning text-dark fw-bold px-3 py-1" asp-controller="Venta" asp-action="Catalogo">
                                    <i class="bi bi-cart4"></i> Tienda
                                </a>
                            </li>
                        </ul>

                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item me-3">
                                <span class="text-white fw-light">Hola, <strong>@User.Identity.Name</strong></span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Acceso" asp-action="Salir">
                                    Cerrar Sesión <i class="bi bi-box-arrow-right"></i>
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <button type="button" class="btn btn-light text-primary fw-bold px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#loginModal">
                                    <i class="bi bi-person-circle"></i> Iniciar Sesión
                                </button>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - MediCita Web - <a asp-area="" asp-controller="Home" asp-action="Index">Proyecto Cibertec</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>