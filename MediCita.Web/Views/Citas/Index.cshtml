@model List<MediCita.Web.Entidades.Especialidad>
@{
    ViewData["Title"] = "Reservar Cita";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="text-success fw-bold">Reserva tu Cita Médica</h2>
        <p class="text-muted">Paso 1: Selecciona una especialidad</p>
    </div>

    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-success shadow-sm hover-effect">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bi bi-heart-pulse text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold">@item.NombreEspec</h5>
                        <p class="card-text small text-muted">@item.Descripcion</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pb-3 text-center">
                        <a asp-action="SeleccionarMedico"
                           asp-route-idEspecialidad="@item.IdEspecialidad"
                           asp-route-nombreEspecialidad="@item.NombreEspec"
                           class="btn btn-outline-success rounded-pill px-4">Seleccionar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>