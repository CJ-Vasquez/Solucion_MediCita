@model List<MediCita.Web.Entidades.Cita>
@{
    ViewData["Title"] = "Mis Citas";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-calendar-check"></i> Historial de Citas</h3>
        </div>
        <div class="card-body">

            <form asp-action="MisCitas" method="get" class="row g-3 mb-4 align-items-end">
                <div class="col-auto">
                    <label class="form-label fw-bold">Filtrar por Fecha:</label>
                    <input type="date" name="fechaFiltro" class="form-control" value="@ViewBag.FechaFiltro" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Buscar</button>
                    <a asp-action="MisCitas" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Limpiar</a>
                </div>
            </form>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning">No se encontraron citas registradas.</div>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha y Hora</th>
                            <th>Especialidad</th>
                            <th>Médico</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FechaCita.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.NombreEspecialidad</td>
                                <td>Dr. @item.NombreMedico</td>
                                <td>
                                    @if (item.Estado == "P")
                                    {
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                    }
                                    else if (item.Estado == "A")
                                    {

                                        <span class="badge bg-success">Atendida</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">Cancelada</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (ViewBag.TotalPaginas > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="MisCitas"
                                       asp-route-p="@i"
                                       asp-route-fechaFiltro="@ViewBag.FechaFiltro">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>