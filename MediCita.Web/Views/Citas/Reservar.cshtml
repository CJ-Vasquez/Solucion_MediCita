@model MediCita.Web.Entidades.Cita
@{
    ViewData["Title"] = "Confirmar Reserva";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4>Confirmar Cita</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="IdMedico" />

                    <div class="mb-3">
                        <label class="fw-bold">Médico:</label>
                        <p class="form-control-plaintext">Dr. @Model.NombreMedico (@Model.NombreEspecialidad)</p>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Seleccione Fecha y Hora:</label>
                        <input asp-for="FechaCita" type="datetime-local" class="form-control" required />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Confirmar Reserva</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>