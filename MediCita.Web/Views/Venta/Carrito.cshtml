@model List<MediCita.Web.Entidades.DetalleVenta>
@{
    ViewData["Title"] = "Mi Carrito";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Resumen de Compra</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Tu carrito está vacío. <a asp-action="Catalogo">Ir a comprar</a></div>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Producto</th>
                    <th>Precio Unit.</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreMedicamento</td>
                        <td>S/. @item.Precio</td>
                        <td>@item.Cantidad</td>
                        <td class="fw-bold">S/. @item.Total</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-secondary">
                    <td colspan="3" class="text-end fw-bold">TOTAL A PAGAR:</td>
                    <td class="fw-bold fs-5 text-success">S/. @Model.Sum(x => x.Total)</td>
                </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-between">
            <a asp-action="Catalogo" class="btn btn-secondary">Seguir Comprando</a>
            <form asp-action="TerminarVenta" method="post">
                <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('¿Confirmar compra?');">
                    <i class="bi bi-check-circle"></i> Confirmar Compra
                </button>
            </form>
        </div>
    }
</div>