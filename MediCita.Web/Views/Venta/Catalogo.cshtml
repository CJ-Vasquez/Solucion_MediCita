@model List<MediCita.Web.Entidades.Medicamento>
@{
    ViewData["Title"] = "Catálogo de Farmacia";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="bi bi-shop"></i> Catálogo de Medicamentos</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            @TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Carrito" class="btn btn-warning position-relative">
            <i class="bi bi-cart-fill"></i> Ver Carrito
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-header bg-transparent border-primary text-center">
                        <h5 class="card-title text-primary">@item.Nombre</h5>
                    </div>
                    <div class="card-body text-center">
                        <h6 class="card-subtitle mb-2 text-muted">@item.Laboratorio</h6>
                        <h3 class="text-success fw-bold">S/. @item.Precio</h3>
                        <p class="card-text">Stock disponible: <strong>@item.Stock</strong></p>
                    </div>
                    <div class="card-footer bg-transparent border-primary">
                        <form asp-action="AgregarCarrito" method="post" class="d-flex gap-2">
                            <input type="hidden" name="idMedicamento" value="@item.IdMedicamento" />
                            <input type="number" name="cantidad" class="form-control" value="1" min="1" max="@item.Stock" style="width: 80px;" />
                            <button type="submit" class="btn btn-primary flex-grow-1">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>