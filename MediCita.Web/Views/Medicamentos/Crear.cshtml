@model MediCita.Web.Entidades.Medicamento

@{
    ViewData["Title"] = "Nuevo Medicamento";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Crear Medicamento</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger">@ViewData["Mensaje"]</div>
                }

                <div class="mb-3">
                    <label>Nombre del Medicamento</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Laboratorio</label>
                    <input asp-for="Laboratorio" class="form-control" />
                    <span asp-validation-for="Laboratorio" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label>Precio (S/.)</label>
                        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="col-6 mb-3">
                        <label>Stock Inicial</label>
                        <input asp-for="Stock" type="number" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" style="width:150px">Guardar</button>
                <a asp-controller="Medicamentos" asp-action="Index" class="btn btn-secondary" style="width:150px">Volver</a>
            </div>
        </form>
    </div>
</div>