@model MediCita.Web.Entidades.Medicamento

@{
    ViewData["Title"] = "Editar Medicamento";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-warning bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Editar Medicamento</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="IdMedicamento" />

            <div class="border p-3 mt-4">
                <div class="mb-3">
                    <label>Nombre del Medicamento</label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Laboratorio</label>
                    <input asp-for="Laboratorio" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 mb-3">
                        <label>Precio (S/.)</label>
                        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-6 mb-3">
                        <label>Stock Actual</label>
                        <input asp-for="Stock" type="number" class="form-control" />
                    </div>
                </div>

                <button type="submit" class="btn btn-warning" style="width:150px">Actualizar</button>
                <a asp-controller="Medicamentos" asp-action="Index" class="btn btn-secondary" style="width:150px">Volver</a>
            </div>
        </form>
    </div>
</div>