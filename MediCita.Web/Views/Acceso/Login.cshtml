@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión - MediCita</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        .login-container {
            min-height: 100vh;
        }

        /* Columna de la Imagen (Izquierda) */
        .bg-image {
            background-image: url('https://images.unsplash.com/photo-1576091160550-2187d80aeff2?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            position: relative;
        }

            /* Capa oscura sobre la imagen para que se vea elegante */
            .bg-image::before {
                content: "";
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                background: linear-gradient(to bottom, rgba(13, 110, 253, 0.4), rgba(0, 0, 0, 0.6));
            }

        .caption-text {
            position: absolute;
            bottom: 50px;
            left: 50px;
            z-index: 1;
            color: white;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        /* Columna del Formulario (Derecha) */
        .login-form {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .form-content {
            width: 100%;
            max-width: 400px;
            padding: 15px;
        }

        .btn-login {
            font-weight: bold;
            padding: 12px;
            letter-spacing: 1px;
            border-radius: 50px; /* Botón redondeado */
        }

        .form-control {
            padding: 12px;
            border-radius: 10px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #0d6efd;
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row login-container">

            <div class="col-md-7 col-lg-8 d-none d-md-block bg-image">
                <div class="caption-text">
                    <h1 class="display-4 fw-bold">MediCita Web</h1>
                    <p class="fs-4">Gestión integral de salud al alcance de tus manos.</p>
                </div>
            </div>

            <div class="col-md-5 col-lg-4 login-form">
                <div class="form-content">

                    <div class="text-center mb-5">
                        <i class="bi bi-hospital-fill text-primary" style="font-size: 4rem;"></i>
                        <h2 class="fw-bold mt-2 text-dark">Bienvenido</h2>
                        <p class="text-muted">Ingresa tus credenciales para acceder</p>
                    </div>

                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@ViewData["Mensaje"]</div>
                        </div>
                    }

                    <form asp-controller="Acceso" asp-action="Login" method="post">

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">CORREO ELECTRÓNICO</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope text-primary"></i></span>
                                <input class="form-control border-start-0 ps-0" type="email" name="correo" placeholder="ejemplo@medicita.com" required />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold">CONTRASEÑA</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-lock text-primary"></i></span>
                                <input class="form-control border-start-0 ps-0" type="password" name="clave" placeholder="••••••••" required />
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button class="btn btn-primary btn-login shadow" type="submit">
                                INGRESAR AL SISTEMA
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <a href="#" class="text-decoration-none text-muted small">¿Olvidaste tu contraseña?</a>
                        </div>

                        <div class="text-center mt-5 text-muted small">
                            &copy; 2025 MediCita Web - Proyecto Cibertec
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>