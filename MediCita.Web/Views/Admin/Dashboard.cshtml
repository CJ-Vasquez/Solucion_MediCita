@{
    ViewData["Title"] = "Panel Administrativo";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-3">
        <h1 class="h3 mb-0 text-gray-800 text-primary fw-bold">
            <i class="bi bi-speedometer2"></i> Dashboard Administrativo
        </h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="bi bi-download"></i> Generar Reporte General
        </a>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 border-primary border-3 border-start border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Pacientes</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.TotalPacientes</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people-fill fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 border-success border-3 border-start border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Citas para Hoy</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.CitasHoy</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-check fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 border-info border-3 border-start border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">Ventas del Día</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@ViewBag.VentasDia</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-currency-dollar fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 border-warning border-3 border-start border-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">Stock Bajo</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">18 Productos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-exclamation-triangle-fill fs-2 text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3 text-muted">Gestión del Sistema</h4>
    <div class="row">

        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 fw-bold text-primary"><i class="bi bi-capsule"></i> Farmacia</h6>
                </div>
                <div class="card-body">
                    <p>Administración del catálogo de medicamentos, precios y stock.</p>
                    <a asp-controller="Medicamentos" asp-action="Index" class="btn btn-primary w-100">
                        Ir al Inventario <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 fw-bold text-success"><i class="bi bi-person-badge"></i> Médicos</h6>
                </div>
                <div class="card-body">
                    <p>Registro de nuevos médicos, asignación de especialidades y horarios.</p>
                    <button class="btn btn-success w-100" disabled title="Próximamente">
                        Gestionar Médicos <i class="bi bi-lock-fill"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 fw-bold text-info"><i class="bi bi-tags"></i> Especialidades</h6>
                </div>
                <div class="card-body">
                    <p>Catálogo de especialidades médicas disponibles en la clínica.</p>
                    <a asp-controller="Citas" asp-action="Index" class="btn btn-info text-white w-100">
                        Ver Especialidades <i class="bi bi-eye"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>